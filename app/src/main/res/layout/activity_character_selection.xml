<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill"
    tools:context=".CharacterSelection">

    <RelativeLayout
        android:id="@+id/RelativeLayoutHead"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp">

        <ImageView
            android:id="@+id/ImageViewBackgroundHead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/background_wood" />

        <LinearLayout
            android:id="@+id/LinearLayoutHead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_3sdp">

            <ImageView
                android:id="@+id/imageViewDD_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/dd_icon" />

            <TextView
                android:id="@+id/textViewActivityName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:fontFamily="@font/balthazar"
                android:gravity="center_vertical"
                android:shadowColor="#4D2F20"
                android:shadowRadius="2"
                android:text="Character selection"
                android:textColor="#db3812"
                android:textStyle="bold"
                app:autoSizeTextType="uniform" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewBackgroundContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/background_scroll" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.example.ddprojet.CustomComponent.CharacterSelectionView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.example.ddprojet.CustomComponent.CharacterSelectionView
                    android:id="@+id/Chara1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:Class="Paladin"
                    app:alignement="Good/Lawful"
                    app:level="5"
                    app:name="Eozen Daragon"
                    app:race="Human"
                    app:avatar="@drawable/avatar_barbarian" />


                <com.example.ddprojet.CustomComponent.CharacterSelectionView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:avatar="@drawable/avatar_barbarian_2" />

                <com.example.ddprojet.CustomComponent.CharacterSelectionView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:name="Je suis un nom vachement long quand même et encore je pourrais être vachement plus long, genre vraiment vraiment plus long"/>

                <com.example.ddprojet.CustomComponent.CharacterSelectionView
                    android:id="@+id/Chara2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:Class="Item"
                    app:alignement="Good/Neutral"
                    app:level="500"
                    app:name="Heritage"
                    app:race="Sword"
                    app:avatar="@drawable/background_wood"/>

                <com.example.ddprojet.CustomComponent.CharacterSelectionView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:alignement="test"
                    app:avatar="@drawable/background_scroll"/>

                <com.example.ddprojet.CustomComponent.CharacterSelectionView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:avatar="@drawable/background_scroll"/>

                <include layout="@layout/new_character_view"/>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</TableLayout>