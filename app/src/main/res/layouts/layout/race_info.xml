<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_260sdp"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_scroll" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/global"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="130dp">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Retour"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                tools:layout_width="match_parent">

                <ImageView
                    android:id="@+id/imageViewTL"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/stylized_border_flip" />

                <ImageView
                    android:id="@+id/imageViewT"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toStartOf="@+id/imageViewTR"
                    app:layout_constraintStart_toEndOf="@+id/imageViewTL"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/stylized_border_top" />

                <ImageView
                    android:id="@+id/imageViewTR"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:adjustViewBounds="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/stylized_border" />

                <ImageView
                    android:id="@+id/imageViewL"
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="0dp"
                    android:rotation="180"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toTopOf="@id/imageViewBL"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageViewTL"
                    app:srcCompat="@drawable/stylized_border_right" />

                <ImageView
                    android:id="@+id/imageViewR"
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toTopOf="@id/imageViewBR"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageViewTR"
                    app:srcCompat="@drawable/stylized_border_right" />

                <ImageView
                    android:id="@+id/imageViewBL"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:adjustViewBounds="true"
                    android:rotation="180"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/stylized_border" />

                <ImageView
                    android:id="@+id/imageViewB"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:rotation="180"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imageViewBR"
                    app:layout_constraintStart_toEndOf="@id/imageViewBL"
                    app:srcCompat="@drawable/stylized_border_top" />

                <ImageView
                    android:id="@+id/imageViewBR"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:adjustViewBounds="true"
                    android:rotation="180"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/stylized_border_flip" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@string/main_font"
                        android:gravity="center_horizontal"
                        android:textColor="#642D04"
                        android:textSize="@dimen/_25sdp"
                        tools:text="Race Name" />

                    <ImageView
                        android:id="@+id/RaceimageView3"
                        android:layout_width="@dimen/_166sdp"
                        android:layout_height="@dimen/_250sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/_10sdp"
                        tools:src="@drawable/race_default" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:fontFamily="@string/main_font"
                        android:text="Alignement"
                        android:textColor="#642D04"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/alignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@string/main_font"
                        android:textSize="@dimen/_15sdp"
                        tools:text="Alignement desc" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:fontFamily="@string/main_font"
                        android:text="Age"
                        android:textColor="#642D04"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@string/main_font"
                        android:textSize="@dimen/_15sdp"
                        tools:text="Age desc" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:fontFamily="@string/main_font"
                        android:text="Size"
                        android:textColor="#642D04"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@string/main_font"
                        android:textSize="@dimen/_15sdp"
                        tools:text="Size desc" />

                    <TextView
                        android:id="@+id/sizeDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@string/main_font"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_20sdp">

                <ImageView
                    android:id="@+id/imageViewTL"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/stylized_border_flip" />

                <ImageView
                    android:id="@+id/imageViewT"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toStartOf="@+id/imageViewTR"
                    app:layout_constraintStart_toEndOf="@+id/imageViewTL"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/stylized_border_top" />

                <ImageView
                    android:id="@+id/imageViewTR"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:adjustViewBounds="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/stylized_border" />

                <ImageView
                    android:id="@+id/imageViewL"
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="0dp"
                    android:rotation="180"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toTopOf="@id/imageViewBL"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageViewTL"
                    app:srcCompat="@drawable/stylized_border_right" />

                <ImageView
                    android:id="@+id/imageViewR"
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toTopOf="@id/imageViewBR"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageViewTR"
                    app:srcCompat="@drawable/stylized_border_right" />

                <ImageView
                    android:id="@+id/imageViewBL"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:adjustViewBounds="true"
                    android:rotation="180"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/stylized_border" />

                <ImageView
                    android:id="@+id/imageViewB"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:rotation="180"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imageViewBR"
                    app:layout_constraintStart_toEndOf="@id/imageViewBL"
                    app:srcCompat="@drawable/stylized_border_top" />

                <ImageView
                    android:id="@+id/imageViewBR"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:adjustViewBounds="true"
                    android:rotation="180"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/stylized_border_flip" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@string/main_font"
                        android:gravity="center_horizontal"
                        android:text="Languages"
                        android:textColor="#642D04"
                        android:textSize="@dimen/_25sdp" />

                    <TextView
                        android:id="@+id/langDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@string/main_font"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:fontFamily="@string/main_font"
                        android:text="Known languages"
                        android:textColor="#642D04"
                        android:textSize="@dimen/_15sdp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/languages"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="#68D3947E">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_20sdp">

                <ImageView
                    android:id="@+id/imageViewTL"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/stylized_border_flip" />

                <ImageView
                    android:id="@+id/imageViewT"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toStartOf="@+id/imageViewTR"
                    app:layout_constraintStart_toEndOf="@+id/imageViewTL"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/stylized_border_top" />

                <ImageView
                    android:id="@+id/imageViewTR"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:adjustViewBounds="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/stylized_border" />

                <ImageView
                    android:id="@+id/imageViewL"
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="0dp"
                    android:rotation="180"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toTopOf="@id/imageViewBL"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageViewTL"
                    app:srcCompat="@drawable/stylized_border_right" />

                <ImageView
                    android:id="@+id/imageViewR"
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toTopOf="@id/imageViewBR"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageViewTR"
                    app:srcCompat="@drawable/stylized_border_right" />

                <ImageView
                    android:id="@+id/imageViewBL"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:adjustViewBounds="true"
                    android:rotation="180"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/stylized_border" />

                <ImageView
                    android:id="@+id/imageViewB"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:rotation="180"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imageViewBR"
                    app:layout_constraintStart_toEndOf="@id/imageViewBL"
                    app:srcCompat="@drawable/stylized_border_top" />

                <ImageView
                    android:id="@+id/imageViewBR"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:adjustViewBounds="true"
                    android:rotation="180"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/stylized_border_flip" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@string/main_font"
                        android:gravity="center_horizontal"
                        android:text="Bonus"
                        android:textColor="#642D04"
                        android:textSize="@dimen/_25sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fontFamily="@string/main_font"
                            android:text="Speed"
                            android:textColor="#642D04"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:id="@+id/speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fontFamily="@string/main_font"
                            android:textSize="@dimen/_15sdp"
                            tools:text="30" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:fontFamily="@string/main_font"
                        android:text="Traits"
                        android:textColor="#642D04"
                        android:textSize="@dimen/_15sdp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/trait"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="#68D3947E"
                        android:headerDividersEnabled="false" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:fontFamily="@string/main_font"
                        android:text="Characteristics"
                        android:textColor="#642D04"
                        android:textSize="@dimen/_15sdp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/Bonus"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="#68D3947E" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:fontFamily="@string/main_font"
                        android:text="Proficiencies"
                        android:textColor="#642D04"
                        android:textSize="@dimen/_15sdp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/prof"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="#68D3947E" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/selectRace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="select"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>